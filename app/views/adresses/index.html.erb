<h1>Adresses</h1>

<table>
  <thead>
    <tr>
      <th>Rua</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Contato</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adresses.each do |adress| %>
      <tr>
        <td><%= adress.street %></td>
        <td><%= adress.city %></td>
        <td><%= adress.state %></td>
        <td><%= adress.contact.name %></td>
        <td><%= link_to 'Exibir', adress %></td>
        <td><%= link_to 'Editar', edit_adress_path(adress) %></td>
        <td><%= link_to 'Excluir', adress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

