<p id="notice"><%= notice %></p>

<h1>Telefones</h1>

<table>
  <thead>
    <tr>
      <th>Telefone</th>
      <th>Contato</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td><%= phone.phone %></td>
        <td><%= phone.contact.name %></td>
        <td><%= link_to 'Exibir', phone %></td>
        <td><%= link_to 'Editar', edit_phone_path(phone) %></td>
        <td><%= link_to 'Excluir', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Telefone', new_phone_path %>
<%= link_to 'Voltar', home_index_path %>